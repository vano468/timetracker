%h1 User
%h2 ADMIN - New

= form_for @user, url: admin_users_path do |f|
  = f.text_field :first_name, placeholder: 'First name'
  %br
  = f.text_field :middle_name, placeholder: 'Middle name'
  %br
  = f.text_field :last_name, placeholder: 'Last name'
  %br
  = f.text_field :email, placeholder: 'Email'
  %br
  = f.text_field :password, placeholder: 'Password'
  %br
  = f.collection_select :department_id, @departments, :id, :hierarchy_title, prompt: 'Department...'
  %br
  = f.submit