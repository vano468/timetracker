= simple_form_for @form, remote: true, html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f|
  = f.input :day, as: 'hidden', input_html: { value: @worktime.day }
  .row= f.input :time_from, placeholder: 'ex. 09:00', wrapper_html: { class: 'col-sm-12' }
  .row= f.input :time_to,   placeholder: 'ex. 18:00', wrapper_html: { class: 'col-sm-12' }
  .row= f.input :message, placeholder: 'I worked so hard', wrapper_html: { class: 'col-sm-12' }
  .row
    .form-group.col-sm-12
      .col-sm-12.text-right
        %button.btn.btn-default{'data-dismiss' => 'modal'} Close
        %button.btn.btn-primary#add_worktime{type: 'submit'}= @worktime.submit_text
