%h1 Records
%h2 Bookkeeping

%table.table.table-responsive
  %thead
    %th ID
    %th Type
    %th From
    %th To
  %tbody
    - @records.each do |r|
      %tr
        %td= r.id
        %td= r.type
        %td= r.date_from.to_date
        %td= r.date_to.to_date
        %td= link_to 'Approve', bookkeeper_approve_record_path(r)